<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentee Profile - FatherAdvice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">Mentee Profile</h2>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <img src="<%= mentee.profilePicture || '/images/default-avatar.png' %>" 
                                     alt="Profile Picture" 
                                     class="img-fluid rounded-circle">
                            </div>
                            <div class="col-md-8">
                                <h3><%= mentee.name %></h3>
                                <p class="text-muted"><%= mentee.email %></p>
                                <p><strong>Field of Interest:</strong> <%= mentee.fieldOfInterest %></p>
                                <p><strong>Education:</strong> <%= mentee.education %></p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h4>Skills</h4>
                                <div class="skills-container">
                                    <% mentee.skills.forEach(skill => { %>
                                        <span class="badge bg-primary me-2 mb-2"><%= skill %></span>
                                    <% }); %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4>Bio</h4>
                                <p><%= mentee.bio || 'No bio available' %></p>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a href="/mentor/matching" class="btn btn-secondary">Back to Matches</a>
                            <button class="btn btn-primary" onclick="sendConnectionRequest('<%= mentee._id %>')">
                                Send Connection Request
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function sendConnectionRequest(menteeId) {
            // TODO: Implement connection request functionality
            alert('Connection request feature coming soon!');
        }
    </script>
</body>
</html> 