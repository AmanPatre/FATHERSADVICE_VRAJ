<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ask a Question | Father's Advice</title>
    <link rel="stylesheet" href="/css/mentee_request.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo-container">
                <img src="/images/white logo_.png" alt="Father's Advice Logo" class="logo">
            </div>
            <nav>
                <a href="/mentee_profile">Dashboard</a>
                <a href="/logout">Logout</a>
            </nav>
        </div>
    </header>

    <main>
        <div class="container">
            <h1>Ask Your Question</h1>
            <p class="subtitle">Share your doubt and get expert guidance from our mentors</p>

            <div id="loading-indicator" style="display: none; text-align: center; margin: 20px 0;">
                <i class="fas fa-spinner fa-spin" style="font-size: 24px; color: #ff6b00;"></i>
                <p>Finding the best mentor for you...</p>
            </div>

            <div id="error-message" style="display: none; color: red; margin-bottom: 15px;"></div>

            <form id="mentor-request-form" class="mentor-request-form">
                <div class="form-group">
                    <label for="doubt">Your Question</label>
                    <textarea 
                        id="doubt" 
                        name="doubt" 
                        rows="6" 
                        placeholder="Type your question here... Be as specific as possible to get the best help."
                        required
                    ></textarea>
                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-btn" id="submit-btn">
                        <i class="fas fa-paper-plane"></i> Submit Question
                    </button>
                    <a href="/mentee_profile" class="cancel-btn">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <div class="footer-container">
            <p>&copy; 2024 Father's Advice. All Rights Reserved.</p>
        </div>
    </footer>

    <script>
        document.getElementById('mentor-request-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const doubt = document.getElementById('doubt').value;
            const submitBtn = document.getElementById('submit-btn');
            const loadingIndicator = document.getElementById('loading-indicator');
            const errorMessage = document.getElementById('error-message');
            
            if (!doubt.trim()) {
                errorMessage.textContent = 'Please enter your question';
                errorMessage.style.display = 'block';
                return;
            }
            
            // Show loading indicator and disable submit button
            loadingIndicator.style.display = 'block';
            submitBtn.disabled = true;
            errorMessage.style.display = 'none';
            
            try {
                const response = await fetch('/find-mentor', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify({ doubt })
                });
                
                if (response.ok) {
                    // Redirect to matching interface
                    window.location.href = '/mentor-match-results';
                } else {
                    const data = await response.json();
                    errorMessage.textContent = data.error || 'Failed to submit your question. Please try again.';
                    errorMessage.style.display = 'block';
                    submitBtn.disabled = false;
                    loadingIndicator.style.display = 'none';
                }
            } catch (error) {
                console.error('Error:', error);
                errorMessage.textContent = 'An error occurred. Please try again later.';
                errorMessage.style.display = 'block';
                submitBtn.disabled = false;
                loadingIndicator.style.display = 'none';
            }
        });
    </script>
</body>
</html> 