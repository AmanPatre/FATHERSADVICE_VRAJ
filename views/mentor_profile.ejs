<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.name %> | Profile | Father's Advice</title>
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <!-- Navbar -->
    <header>
        <div class="navbar">
            <!-- Logo on the left side -->
            <div class="logo-container">
                <img src="/images/white logo_.png" alt="Father's Advice Logo" class="logo">
            </div>
            <nav>
                <a href="/">Home</a>
                <a href="/logout">Logout</a>
            </nav>
        </div>
    </header>

    <div class="container">
        <!-- Profile Header Section -->
        <div class="profile-header">
            <div class="profile-image">
                <!-- User's Profile Image (circle) -->
                <img src="/images/profile-pic.jpg" alt="Profile Picture">
            </div>
            <div class="profile-info">
                <h2><%= user.name %></h2>
                <p><strong>Role:</strong> <%= user.role %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
                <p><strong>Address:</strong> <%= user.address %></p>
                <% if (!profile.fieldOfInterest) { %>
                    <form action="/mentor_profile" method="get">
                        <button type="submit" class="btn-profile-fill" style="background-color: blue; color: white;">Complete Profile</button>
                    </form>
                <% } %>
            </div>
        </div>

        <% if (profile.fieldOfInterest) { %>
            <!-- Profile Stats Section -->
            <div class="profile-stats">
                <div class="stat-item">
                    <h3>Field of Interest</h3>
                    <p><%= profile.fieldOfInterest %></p>
                </div>
                <div class="stat-item">
                    <h3>Year of Experience</h3>
                    <p><%= profile.yearOfExperience %> years</p>
                </div>
                <div class="stat-item">
                    <h3>Availability</h3>
                    <p><%= profile.availability || 'Not specified' %></p>
                </div>
            </div>

            <!-- Skills Section -->
            <div class="skills-section">
                <h3>Skills</h3>
                <div class="skills-list">
                    <% profile.skills.forEach(function(skill) { %>
                        <span class="skill-tag"><%= skill %></span>
                    <% }); %>
                </div>
            </div>

            <!-- Bio Section -->
            <div class="bio-section">
                <h3>Brief Bio</h3>
                <p><%= profile.briefBio || 'No bio available' %></p>
            </div>

            <!-- Resume Section -->
            <% if (profile.uploadResume) { %>
                <div class="resume-section">
                    <h3>Resume</h3>
                    <a href="<%= profile.uploadResume %>" target="_blank" class="btn-view-resume">View Resume</a>
                </div>
            <% } %>
        <% } %>

        <!-- Profile Actions -->
        <div class="profile-actions">
            <button class="btn-edit">Edit Profile</button>
            <button class="btn-change-password">Change Password</button>
        </div>
        <div class="btn-container">
            <a href="/html/find_mentor.html" class="find-mentor-btn">Find a Mentee</a>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Father's Advice. All Rights Reserved.</p>
    </footer>
</body>
</html>